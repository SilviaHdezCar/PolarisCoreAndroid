<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImportFragment"
    android:background="@color/gris_fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">


        <TextView
            style="@style/letra_titulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Datos del usuario"
            />

        <ImageView
            android:id="@+id/perfil_imagen_usuario"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Nombre: "
                style="@style/letra_negrita"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/perfil_nombre_usuario"
                style="@style/letra_contenido"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Usuario: "
                style="@style/letra_negrita"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/perfil_usuario"
                style="@style/letra_contenido"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Cargo: "
                style="@style/letra_negrita"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/perfil_cargo"
                style="@style/letra_contenido"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Telefono: "
                style="@style/letra_negrita"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/perfil_telefono"
                style="@style/letra_contenido"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Correo: "
                style="@style/letra_negrita"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/perfil_correo"
                style="@style/letra_contenido"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="UbicaciÃ³n: "
                style="@style/letra_negrita"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/perfil_ubicacion"
                style="@style/letra_contenido"
                />
        </LinearLayout>





    </LinearLayout>

</FrameLayout>